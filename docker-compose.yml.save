services:
  hyperf_base:
    build:
      context: .
      dockerfile: Dockerfile
    command: php bin/hyperf.php start
    image: ${DOCKER_IMAGE}:$DOCKER_TAG
    restart: always
    environment:
      - APP_ENV=prod
    networks:
      - hyperf_base-net 
    deploy:
      replicas: 2
      update_config:
        parallelism: 1
        delay: 10s
      restart_policy:
        condition: on-failure
      placement:
        constraints:
          - node.role == worker 
        max_replicas_per_node: 1
    logging:
      driver: gelf
      options:
        gelf-address: "udp://95.163.229.108:12201"
        tag: "hyperf_base"

networks:
  hyperf_base-net:
    driver: overlay
    internal: true
