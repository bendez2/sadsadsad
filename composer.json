{
  "name": "hyperf/hyperf-skeleton",
  "type": "project",
  "keywords": [
    "php",
    "swoole",
    "framework",
    "hyperf",
    "microservice",
    "middleware"
  ],
  "description": "A coroutine framework that focuses on hyperspeed and flexible, specifically use for build microservices and middlewares.",
  "license": "Apache-2.0",
  "require": {
    "php": ">=8.1",
    "ext-mongodb": "*",
    "ext-redis": "*",
    "ext-simplexml": "*",
    "aws/aws-sdk-php": "^3.305",
    "dompdf/dompdf": "^3.0",
    "exussum12/xxhash": "^1.3",
    "guzzlehttp/guzzle": "^7.8",
    "hflabs/dadata": "^24.4",
    "hyperf/amqp": "~3.1.0",
    "hyperf/async-queue": "~3.1.0",
    "hyperf/cache": "~3.1.0",
    "hyperf/command": "~3.1.0",
    "hyperf/config": "~3.1.0",
    "hyperf/constants": "~3.1.0",
    "hyperf/crontab": "^3.1",
    "hyperf/database-pgsql": "*",
    "hyperf/db-connection": "^3.1",
    "hyperf/elasticsearch": "~3.1.0",
    "hyperf/engine": "^2.10",
    "hyperf/framework": "~3.1.0",
    "hyperf/guzzle": "~3.1.0",
    "hyperf/http-server": "~3.1.0",
    "hyperf/json-rpc": "~3.1.0",
    "hyperf/kafka": "^3.1",
    "hyperf/logger": "~3.1.0",
    "hyperf/memory": "~3.1.0",
    "hyperf/model-cache": "~3.1.0",
    "hyperf/process": "~3.1.0",
    "hyperf/redis": "^3.1",
    "hyperf/rpc": "~3.1.0",
    "hyperf/rpc-client": "~3.1.0",
    "hyperf/rpc-server": "~3.1.0",
    "hyperf/service-governance": "~3.1.0",
    "hyperf/translation": "^3.1",
    "illuminate/database": "^11.0",
    "longlang/phpkafka": "^1.2",
    "mongodb/mongodb": "^1.18",
    "php-amqplib/php-amqplib": "^3.6",
    "phpunit/phpunit": "^10.0",
    "simpod/clickhouse-client": "^0.7.5",
    "smi2/phpclickhouse": "^1.5",
    "symfony/dependency-injection": "^7.0"
  },
  "require-dev": {
    "codeception/codeception": "^5.1",
    "codeception/module-asserts": "^3.0",
    "codeception/module-phpbrowser": "^3.0",
    "friendsofphp/php-cs-fixer": "^3.0",
    "hyperf/devtool": "^3.1",
    "hyperf/testing": "~3.1.0",
    "hyperf/watcher": "^3.1",
    "mockery/mockery": "^1.0",
    "phpstan/phpstan": "^1.11",
    "swoole/ide-helper": "^5.0"
  },
  "suggest": {
    "ext-openssl": "Required to use HTTPS.",
    "ext-json": "Required to use JSON.",
    "ext-pdo": "Required to use MySQL Client.",
    "ext-pdo_mysql": "Required to use MySQL Client."
  },
  "autoload": {
    "psr-4": {
      "Ports\\": "src/Ports",
      "Domain\\": "src/Domain",
      "Common\\": "src/Common",
      "Adapters\\": "src/Adapters",
      "Application\\": "src/Application",
      "Infrastructure\\": "src/Infrastructure"
    },
    "files": [
      "config/autoload/dependencies.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTest\\": "./test/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "ext-bcmath": "7.4"
    }
  },
  "extra": [],
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-autoload-dump": [
      "rm -rf runtime/container"
    ],
    "test": "co-phpunit --prepend test/bootstrap.php -c phpunit.xml --colors=always",
    "cs-fix": "php-cs-fixer fix $1",
    "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon src ./config",
    "start": [
      "Composer\\Config::disableProcessTimeout",
      "php ./bin/hyperf.php start"
    ]
  }
}
